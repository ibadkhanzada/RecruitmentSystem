@model RecruitmentSystem.Models.User

@{
    ViewData["Title"] = "Submit Application";
    Layout = "~/Views/Shared/RegistrationLayout.cshtml";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Name" placeholder="Full Name" />
    <span asp-validation-for="Name" class="text-danger"></span><br />

    <input asp-for="Email" placeholder="Email" />
    <span asp-validation-for="Email" class="text-danger"></span><br />

    <input asp-for="Password" type="password" placeholder="Password" />
    <span asp-validation-for="Password" class="text-danger"></span><br />

    <button type="submit">Register</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div style="color:green">@TempData["SuccessMessage"]</div>
}
