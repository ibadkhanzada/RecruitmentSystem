@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero / Slider Section -->
<div class="slider-container">
    <img src="~/assets/img/hd1.jpg" alt="Image 1" />
    <img src="~/assets/img/hd2.jpg" alt="Image 2" />
    <img src="~/assets/img/hd3.jpg" alt="Image 3" />

    <div class="overlay-text">
        <h1>Find Your Dream Job</h1>
        <p>
            Step into a world of opportunities.
            Connect with top employers and build the career you’ve always dreamed of.
        </p>
        <div class="header-buttons">
            <a href="#" class="hero-btn hero-btn-primary">Get Started</a>
            <a href="#" class="hero-btn hero-btn-secondary">Explore Vacancies</a>
        </div>
    </div>
</div>

<!-- About Us Section -->
<section class="about-us-section">
    <div class="about-container">
        <!-- Left Side Text -->
        <div class="about-text" data-aos="fade-right" data-aos-duration="1500">
            <span class="section-subtitle">Who We Are</span>
            <h2>About Us</h2>
            <p>
                At <strong>ABC Recruitment</strong>, we connect talented professionals with leading companies across industries.
                Our mission is to make the hiring process smooth, transparent, and effective for both employers and job seekers.
            </p>
            <p>
                Whether you're looking for your dream job or seeking the perfect candidate,
                our platform is your trusted recruitment partner.
            </p>
            <a href="/Home/About" class="about-btn">Learn More</a>
        </div>

        <!-- Right Side Images -->
        <div class="about-images" data-aos="fade-left" data-aos-duration="1500">
            <img src="~/assets/img/hd2.jpg" alt="About Image 1" class="img1">
            <img src="~/assets/img/hd3.jpg" alt="About Image 2" class="img2">
            <img src="~/assets/img/hd1.jpg" alt="About Image 3" class="img3">
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="why-choose-us" data-aos="fade-up" data-aos-duration="1500">
    <div class="container">
        <h2 class="section-title">Why Choose Us</h2>
        <p class="section-subtitle">ABC Recruitment helps you land your dream job with ease, efficiency, and trust.</p>

        <div class="cards-container">
            <div class="choose-card" data-aos="zoom-in" data-aos-delay="100">
                <div class="icon"><i class="fas fa-briefcase"></i></div>
                <h3>Expert HR Team</h3>
                <p>Our HR experts connect you with top employers and ensure smooth recruitment from application to onboarding.</p>
            </div>

            <div class="choose-card" data-aos="zoom-in" data-aos-delay="200">
                <div class="icon"><i class="fas fa-clock"></i></div>
                <h3>Quick Process</h3>
                <p>We value your time! Our streamlined system speeds up applications and interview scheduling.</p>
            </div>

            <div class="choose-card" data-aos="zoom-in" data-aos-delay="300">
                <div class="icon"><i class="fas fa-shield-alt"></i></div>
                <h3>Trusted Platform</h3>
                <p>Thousands of applicants trust us for secure, transparent, and fair hiring processes.</p>
            </div>
        </div>
    </div>
</section>

<!-- AOS Script -->
<script>
    AOS.init();
</script>
