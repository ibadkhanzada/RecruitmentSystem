<!-- AOS Script -->
<script>
    AOS.init();
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<script>
        const container = document.querySelector('#services-section #parallax-area');
    const cards = document.querySelectorAll('#services-section .tilt-card');
    const glow = document.querySelector('#services-section #glow-circle');

    if (container) {
      container.addEventListener('mousemove', (e) => {
        const { width, height, left, top } = container.getBoundingClientRect();
        const x = e.clientX - left - width / 2;
        const y = e.clientY - top - height / 2;
        const rotateX = (y / height) * -15;
        const rotateY = (x / width) * 15;

        cards.forEach(card => {
          card.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
        });

        if (glow) {
          glow.style.left = `${e.clientX - left}px`;  // relative to container
          glow.style.top = `${e.clientY - top}px`;
        }
      });

      container.addEventListener('mouseleave', () => {
        cards.forEach(card => {
          card.style.transform = `rotateX(0deg) rotateY(0deg)`;
        });
      });

      // Floating bubbles animation with GSAP
      gsap.to("#services-section .floating", {
        y: 20,
        repeat: -1,
        yoyo: true,
        duration: 3,
        ease: "sine.inOut",
        stagger: 0.3
      });
    }

</script>