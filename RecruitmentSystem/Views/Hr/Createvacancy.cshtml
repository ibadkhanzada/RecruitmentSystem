
@{
    ViewData["Title"] = "Createvacancy";
    Layout = "~/Views/Shared/_hrLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header pb-0">
                </div>
                <div class="card-body">
                    <p class="text-uppercase text-sm">Job Information</p>
                    <div class="row">
                        @* =============================TITLE================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Title</label>
                                <input class="form-control" type="text" placeholder="Enter job title" required>
                            </div>
                        </div>
                          @* =============================DESCRIPTION================================ *@
                       <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Description</label>
                                <textarea class="form-control" type="text" placeholder="Enter job description" required></textarea>
                            </div>
                        </div>
                        @* =============================CREATION DATE================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Creation Date</label>
                                <input class="form-control" type="date" placeholder="Enter job creation date" required>
                            </div>
                        </div>
                        @* =============================DEPARTMENT================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Department</label>
                                <input class="form-control" type="text" placeholder="Enter job department" required>
                            </div>
                        </div>
                        @* =============================STATUS================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Status</label>
                                <input class="form-control" type="text" placeholder="Enter job status" required>
                            </div>
                        </div>
                        @* =============================NO.OF OPENING================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">No.Of Opening</label>
                                <input class="form-control" type="number" placeholder="Enter job no.of opening" required>
                            </div>
                        </div>
                        @* =============================OWNER================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Owner</label>
                                <input class="form-control" type="text" placeholder="Enter job owner" required>
                            </div>
                        </div>
                        @* =============================CLOSE DATE================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-datetime-input" class="form-control-label">Close Date</label>
                                <input class="form-control" type="date" placeholder="Enter job close date" required>
                            </div>
                        </div>
                        @* =============================LIST OF HIRED================================ *@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">List Of Hired</label>
                                <input class="form-control" type="text" placeholder="Enter job list of hired applicant" required>
                            </div>
                        </div>
                     
                    </div>
                    @* =============================CONTACT INFORMATION================================ *@

                    <hr class="horizontal dark">
                    <p class="text-uppercase text-sm">Location</p>
                    <div class="row">
                       
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">City</label>
                                <input class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Country</label>
                                <input class="form-control" type="text">
                            </div>
                        </div>
                       
                    </div>

                   <button class="btn btn-primary" type="btn">Submit</button>
                </div>
            </div>
        </div>
    
    </div>
   
</div>