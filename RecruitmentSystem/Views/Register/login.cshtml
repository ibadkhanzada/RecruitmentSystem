@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/registerLayout.cshtml";
}
@model RecruitmentSystem.Models.LoginViewModel
<div class="container">
    <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card z-index-0">
                <div class="card-header text-center pt-4">
                    <h5>Login Here</h5>
                </div>

                <div class="card-body">
                    <form asp-action="login">

                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="Email" aria-label="Email" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" placeholder="Password" aria-label="Password" asp-for="Password">
                        </div>
                        <div class="mb-3">
                            <input type="hidden" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Role" value="user">
                        </div>
                        <div class="form-check form-check-info text-start">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                            <label class="form-check-label" for="flexCheckDefault">
                                I agree the <a href="javascript:;" class="text-dark font-weight-bolder">Terms and Conditions</a>
                            </label>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn bg-gradient-dark w-100 my-4 mb-2">Sign In</button>
                        </div>
                        <p class="text-sm mt-3 mb-0">Already have an account? <a href="javascript:;" class="text-dark font-weight-bolder" asp-action="signup">Sign Up</a></p>
                        <span>@ViewBag.msg</span>

                    </form>
                </div>
            </div>
        </div>
    </div>


